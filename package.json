{
  "name": "@cergmin/components",
  "version": "0.2.0",
  "description": "Library of React components",
  "engines": {
    "node": ">= 14",
    "pnpm": ">=6"
  },
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./lib/index.mjs",
      "types": "./lib/types/index.d.ts"
    }
  },
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "types": "./lib/types/index.d.ts",
  "keywords": [
    "ui",
    "react",
    "library",
    "components"
  ],
  "scripts": {
    "start": "pnpm build:all && pnpm start:docs",
    "start:docs": "cd docs && pnpm start",
    "build": "rollup -c",
    "build:docs": "cd docs && pnpm build",
    "build:all": "npm-run-all build build:docs",
    "watch": "rollup -c -w",
    "watch:docs": "cd docs && pnpm dev",
    "test": "jest",
    "watch:test": "jest --watch",
    "coverage": "jest --coverage",
    "fix": "prettier --write \"src/**/*.(js|jsx|ts|tsx)\" & eslint --ext js,jsx,ts,tsx src & stylelint --fix src/**/*.css",
    "fix:docs": "prettier --write \"docs/src/**/*.(js|jsx|ts|tsx)\" & eslint --ext js,jsx,ts,tsx docs/src & stylelint --fix docs/src/**/*.css",
    "fix:all": "npm-run-all fix fix:docs",
    "prepublishOnly": "node prepublish.mjs && pnpm build && clean-publish"
  },
  "author": "Sergey Minakov <cergmin@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/cergmin/components",
  "repository": "github:cergmin/components",
  "bugs": {
    "url": "https://github.com/cergmin/components/issues"
  },
  "dependencies": {
    "clsx": "^1.1.1"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "typescript": "^4.5.4"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.2",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.5",
    "@types/react": "^17.0.44",
    "@types/react-dom": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "autoprefixer": "^10.4.1",
    "clean-publish": "^4.0.0",
    "eslint": "^8.6.0",
    "eslint-plugin-jest": "^25.3.3",
    "eslint-plugin-react": "^7.28.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-nested": "^5.0.6",
    "prettier": "^2.5.1",
    "react-dom": "^17.0.2",
    "rollup": "^2.62.0",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "rollup-plugin-visualizer": "^5.6.0",
    "stylelint": "^14.2.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-order": "^5.0.0",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "publishConfig": {
    "directory": "package"
  },
  "clean-publish": {
    "tempDir": "package",
    "files": [
      "src",
      "examples",
      "docs",
      "coverage",
      "light_logo.svg",
      "dark_logo.svg",
      "prepublish.mjs",
      "jest.config.ts",
      "rollup.config.js",
      "tsconfig.json",
      ".stylelintrc.json",
      ".gitignore",
      "CONTRIBUTING.md"
    ],
    "cleanDocs": true,
    "withoutPublish": true,
    "packageManager": "pnpm"
  }
}
