{
  "name": "components",
  "version": "0.1.2",
  "description": "Library of React components",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cergmin/components.git"
  },
  "keywords": [
    "react",
    "library",
    "components"
  ],
  "author": "Sergey Minakov <cergmin@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cergmin/components/issues"
  },
  "homepage": "https://github.com/cergmin/components#readme",
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "types": "./lib/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./lib/index.mjs",
      "types": "./lib/types/index.d.ts"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "build-examples": "cd examples && npm run build",
    "build-all": "rollup -c && cd examples && npm run build",
    "watch": "rollup -c -w",
    "test": "jest",
    "test-watch": "jest --watch",
    "coverage": "jest --coverage",
    "fix": "prettier --write \"src/**/*.(js|jsx|ts|tsx)\" & eslint --ext js,jsx,ts,tsx src & stylelint --fix src/**/*.css"
  },
  "dependencies": {
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "clsx": "^1.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.2",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "autoprefixer": "^10.4.1",
    "eslint": "^8.6.0",
    "eslint-plugin-jest": "^25.3.3",
    "eslint-plugin-react": "^7.28.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.5",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "rollup": "^2.62.0",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "stylelint": "^14.2.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-order": "^5.0.0",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0"
  }
}
